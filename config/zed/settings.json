// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Note: Context servers with API keys should be configured in
  // ~/.config/zed/settings.json.local (not tracked in dotfiles)
  "buffer_font_family": ".ZedMono",
  "buffer_font_size": 13.0,
  "buffer_font_weight": 350.0,
  "ui_font_family": ".ZedMono",
  "ui_font_size": 15.0,
  "ui_font_weight": 350.0,
  "colorize_brackets": true,
  "git_panel": {
    "sort_by_path": false,
  },
  "icon_theme": "Catppuccin Mocha",
  "git": {
    "inline_blame": {
      "show_commit_summary": true,
    },
  },
  "inlay_hints": {
    "enabled": false,
  },
  "terminal": {
    "dock": "bottom",
    "toolbar": {
      "breadcrumbs": false,
    },
  },
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-6-latest",
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-6-latest",
    },
    "commit_message_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-6-latest",
    },
    "play_sound_when_agent_done": true,
    "default_width": 600.0,
    "dock": "left",
    "model_parameters": [],
  },
  "notification_panel": {
    "dock": "right",
  },
  "project_panel": {
    "entry_spacing": "comfortable",
    "default_width": 250.0,
    "dock": "right",
  },
  "pane_split_direction_vertical": "right",
  "use_system_window_tabs": true,
  "bottom_dock_layout": "contained",
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "title_bar": {
    "show_menus": true,
    "show_branch_icon": true,
  },
  "use_smartcase_search": true,
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "agent_ui_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Syntax",
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
  },
}
